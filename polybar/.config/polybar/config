;; POLYBAR CONFIG
;; ====
[colors]
background      = #00
background-alt  = #334169e1
foreground      = #334169e1
primary         = #fff
alert           = #f7768e


;; MAIN
[bar/main]
bottom          = false
monitor         = HDMI-0

background      = ${colors.background}
border-size     = 0
border-color    = #000000

padding-right   = 2
offset-y        = 5

module-margin-left  = 1
module-margin-right = 1

modules-left    = bspwm xwindow
modules-right   = date

wm-restack      = bspwm


;; BSPWM
[module/bspwm]
type            = internal/bspwm
pin-workspaces  = true

label-focused               = %index%
label-focused-background    = $colors.background-alt
label-focused-padding       = 2

label-occupied              = %index%
label-occupied-padding      = 2

label-urgent                = %index%!
label-urgent-background     = ${colors.background}
label-urgent-padding        = 2

label-empty                 = 

;; XWINDOW
[module/xwindow]
type    = internal/xwindow
label   = %title:0:30:...%

;; DATE
[module/date]
type        = internal/date
interval    = 5

date        = "%a %b %d"
time        = %H:%M

format      = ðŸ•‘ <label>
label       = %time% %date%


